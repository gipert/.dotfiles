# forcing backend otherwise the default is qtagg, but pyqt is not installed by
# default in virtualenvs!
backend: tkagg
# tkagg does not respect expernal scaling instructions (via e.g. environment
# variables), so need to force it here
figure.dpi: 192
savefig.bbox: tight
# constrained layout should be better than tight layout
figure.constrained_layout.use: True
# paul tol colors
axes.prop_cycle: cycler('color', ['4477AA', 'EE6677', '228833', 'CCBB44', '66CCEE', 'AA3377', 'BBBBBB'])
