POWERLEVEL9K_CUSTOM_SCL='[ -z ${X_SCLS+1} ] || echo ${X_SCLS:0:-1}'
POWERLEVEL9K_CUSTOM_SCL_BACKGROUND="yellow"
POWERLEVEL9K_CUSTOM_SCL_FOREGROUND="black"

POWERLEVEL9K_STATUS_VERBOSE=false
POWERLEVEL9K_HOME_ICON=''
POWERLEVEL9K_HOME_SUB_ICON=''
POWERLEVEL9K_FOLDER_ICON=''
