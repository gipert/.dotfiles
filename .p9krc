POWERLEVEL9K_SSH_ICON=''

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
    POWERLEVEL9K_DIR_HOME_BACKGROUND='003'
    POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND='003'
    POWERLEVEL9K_DIR_DEFAULT_BACKGROUND='003'
